.sidebar
  .sidebar__header
    %p.sidebar__header__name
      = current_user.name
    %ul.sidebar__header__icon
      %li.sidebar__header__icon__edit
        = link_to new_group_path do
          = fa_icon"edit"
      %li.sidebar__header__icon__cog
        = link_to edit_user_path(current_user) do
          = fa_icon"cog"
  .sidebar__group__box
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
